@using SBMMember.Web.Models.MemberSearchModels
@model MemberSearchResponseViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="seperate"></div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="container search_result">
                <div class="row">
                    <div class="col-xs-3 search_pic">
                        <div text-align:center">
                            @if (Model.Gender == "Male")
                            {
                                <img src="~/img/avatar7.png" class="blood_pic_img">
                            }
                            else
                            {
                                <img src="~/img/female-avtar.png" class="blood_pic_img">
                            }
                        </div>
                    </div>
                    <div class="col-xs-9 pic_content">
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-10 left-box"><lable class="searchname">@Model.FullName</lable></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-10 left-box"><lable>शिक्षण: @Model.Qualification</lable></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-10 left-box">
                                    <lable>संपर्क : @Model.MobileNumber</lable>@if (!string.IsNullOrEmpty(Model.MobileNumber))
                                    {<a target="_blank" href="@("https://wa.me/91" + @Model.MobileNumber)"> <img src="~/img/whats-app.png" class="whatsapp"></a>}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-10 left-box"><lable>Area,City:@Model.Area,@Model.City</lable></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-5 left-box"><lable>मुळगाव: @Model.NativePlace</lable></div>

                            </div>
                            <div class="row">
                                <div class="col-xs-10" style="margin-top:10px;margin-bottom:10px;float:left;margin-left:-10px;">
                                   
                                    <a href="@Url.ActionLink("ViewMemberProfile","MemberDashboard",new{MemberId = Model.MemberId })" class="allviewbtn"><i class="ti-eye"></i> View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>