<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="container">
                <div class="row ">
                    <div class="col-xs-3 logo-box">
                        <a asp-action="MemberHome" asp-controller="Home">  <img src="~/img/sbm logo-1.png" width="80px" height="80px" style="margin-top:10px"></a>
                    </div>
                    <div class="col-xs-7 title-box">
                        <h2>समता भ्रातृ मंडळ</h2>
                        <h4>(पिंपरी चिंचवड, पुणे)</h4>
                    </div>
                    <div class="col-xs-1 toolbar" style="margin-top:20px">
                        <a asp-action="Login" asp-controller="Login" class="login-btn" title="Member Login"><i class="ti-lock"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="scroll">
                <p><marquee style="font-size:larger;">@Model.MarqueeString</marquee></p>
            </div>
            <div>
            </div>
        </div>
    </div>
</div>