<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @*<div class="item active">
            <img src="~/img/banner-2.jpg" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/img/banner-2.jpg" alt="Chicago">
        </div>

        <div class="item">
            <img src="~/img/banner-2.jpg" alt="New York">
        </div>*@
                    @foreach (var item in Model.Banners)
                    {
                        if (Model.Banners.First() == item)
                        {
                            <div class="item active">
                                <img src="@item.imageURL" alt="@item.heading">
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src="@item.imageURL" alt="@item.heading">
                            </div>
                        }
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>