@model MemberMeetingsViewModel
@{
    ViewData["Title"] = "EditMeeting";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<section class="blog_area single-post-area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="scroll">
                    <p>Update Meeting Details</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="section-top-border">
                    <div class="row" id="eventForm">
                        <form asp-action="EditMeeting" asp-controller="AdminDashboard" method="post">
                            <div class="col-lg-10 col-md-10">

                                <input type="hidden" asp-for="Id" />
                                <div class="input-group-icon mt-10">

                                    <input type="date" class="single-input" asp-for="MeetingDate" placeholder="Meeting Date" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Meeting Date'" />
                                </div>

                                <div class="input-group-icon mt-10">
                                    <input type="text" class="single-input" asp-for="MeetingTitle" placeholder="Meeting Title" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Meeting Title'" />
                                </div>
                                <div class="input-group-icon mt-10">
                                    <input type="text" class="single-input" asp-for="MeetingURL" placeholder="MeetingURL" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Meeting URL'" />
                                </div>
                            </div>
                            <div class="mt-10">
                                <input type="radio" id="html" name="Status" value="Active" asp-for="Status">
                                <label for="html">Active</label><br>
                                <input type="radio" id="css" name="Status" value="InActive" asp-for="Status">
                                <label for="css">InActive</label><br>
                            </div>

                            <div class="mt-10" style="float:right">
                                <input type="submit" class="genric-btn primary" style="background-color:#77002e;margin-right:20px">
                                <input type="button" id="btnCancel" class="genric-btn primary" style="background-color:#77002e;margin-right:20px" value="Cancel">
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>
    @*Event list*@

</section>

