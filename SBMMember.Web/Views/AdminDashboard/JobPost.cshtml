
@{
    ViewData["Title"] = "JobPost";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="marqu" style="height:150px">
                    <div class="row">
                        <div class="col-xs-3 d-block d-sm-block d-md-block d-lg-block"><img src="img/icon/job-icon.png" width="50px" height="50px" class="img"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-8 d-block d-sm-block d-md-block d-lg-block center" style="color:#FFFFFF; text-align:center"><h4 style="color:#FFFFFF; text-align:center">Welcome to JOB Portal</h4></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================Blog Area =================-->
<section class="blog_area single-post-area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="single-post">
                    <div class="blog_details">
                        <p class="excert">
                            Post the job
                        </p>
                    </div>
                </div>


                <div class="section-top-border">
                    <div class="row">
                        <div class="col-lg-10 col-md-10">
                            <form action="#">
                                <div class="input-group-icon mt-10">
                                    <input type="text" name="Job Title" placeholder="Job Title" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Job Title'"
                                           required class="single-input">
                                </div>
                                <div class="input-group-icon mt-10">
                                    <textarea class="single-textarea" placeholder="Job Description" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Job Description'"
                                              required></textarea>
                                </div>
                                <div class="input-group-icon mt-10">
                                    <div class="icon"><i class="fa fa-plane" aria-hidden="true"></i></div>
                                    <div class="form-select" id="default-select">
                                        <select>
                                            <option value="0">Job for</option>
                                            <option value="1">Both</option>
                                            <option value="2">Male</option>
                                            <option value="1">Female</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="input-group-icon mt-10">
                                    <input type="text" name="Age Limit" placeholder="Age Limit" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Age Limit'"
                                           required class="single-input">
                                </div>
                                <div class="input-group-icon mt-10">
                                    <input type="text" name="Company Name" placeholder="Company Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Company Name'"
                                           required class="single-input">
                                </div>
                                <div class="input-group-icon mt-10">
                                    <div class="icon"><i class="fa fa-thumb-tack" aria-hidden="true"></i></div>
                                    <input type="text" name="Job Location" placeholder="Job Location" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Job Location'"
                                           required class="single-input">
                                </div>

                                <div class="input-group-icon mt-10">
                                    <div class="icon"><i class="fa fa-thumb-tack" aria-hidden="true"></i></div>
                                    <input type="text" name="Qualification Required" placeholder="Qualification Required" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Qualification Required'"
                                           required class="single-input">
                                </div>

                                <div class="input-group-icon mt-10">
                                    <div class="icon"><i class="fa fa-thumb-tack" aria-hidden="true"></i></div>
                                    <input type="text" name="Salary Bank Offer" placeholder="Salary Bank Offer" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Salary Bank Offer'"
                                           required class="single-input">
                                </div>

                                <div class="input-group-icon mt-10">
                                    <div class="icon"><i class="fa fa-thumb-tack" aria-hidden="true"></i></div>
                                    <input type="text" name="Year of Experience" placeholder="Year of Experience" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Year of Experience'"
                                           required class="single-input">
                                </div>

                                <div class="input-group-icon mt-10">
                                    <div class="icon"><i class="fa fa-thumb-tack" aria-hidden="true"></i></div>
                                    <input type="text" name="ContactNo." placeholder="Company Contact No." onfocus="this.placeholder = ''" onblur="this.placeholder = 'Company Contact No.'"
                                           required class="single-input">
                                </div>

                                <div class="input-group-icon mt-10">
                                    <div class="icon"><i class="fa fa-thumb-tack" aria-hidden="true"></i></div>
                                    <input type="Email" name="Email" placeholder="Company Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Company Email'"
                                           required class="single-input">
                                </div>

                                <div class="mt-10 center">
                                    <a href="#" class="genric-btn primary-border">Primary</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

                <div class="navigation-top">

                </div>




            </div>

        </div>
    </div>
</section>

