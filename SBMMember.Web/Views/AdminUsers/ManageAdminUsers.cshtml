@model AdminUsersViewModel
@{
    ViewData["Title"] = "ManageAdminUsers";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<script>
    $(document).ready(function () {
        $("#BusinessForm").hide();
        $('#tblJobPost').DataTable();
        $("#btnAddNew").click(function () {
            $("#BusinessForm").show();
            $(this).hide();
        });
        $("#btnCancel").click(function () {
            $("#BusinessForm").hide();
            $("#btnAddNew").show();
        });
    });
</script>

<section class="blog_area single-post-area section_padding">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="scroll">
                    <p>Manage Super User Details</p>
                </div>
                <div>
                </div>
            </div>
        </div>



        <div class="section-top-border">
            <div class="row" id="BusinessForm">
                <div class="col-lg-12 col-md-12">
                    <form asp-action="AddBusiness" asp-controller="AdminDashboard" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <input type="text" name="FirstName" asp-for="FirstName" placeholder="First Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'First Name'"
                                       required class="single-input">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <input type="text" name="LastName" asp-for="LastName" placeholder="LastName" onfocus="this.placeholder = ''" onblur="this.placeholder = 'LastName'"
                                       required class="single-input">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <input type="text" name="MobileNo" asp-for="MobileNo" placeholder="Mobile No" onfocus="this.placeholder = ''" onblur="this.placeholder = 'MobileNo'"
                                       required class="single-input">
                            </div>
                            <div class="col-lg-4">
                                <input type="text" name="Password" asp-for="Password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'"
                                       required class="single-input">
                            </div>
                            <div class="col-lg-4">
                                <input type="text" name="Status" asp-for="Status" placeholder="Status" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Status'"
                                       required class="single-input">
                            </div>
                        </div>

                        

                        <div class="row">
                            <div class="col-lg-4">
                                @*<input type="Email" name="CompanyEmail" asp-for="CompanyEmail" placeholder="Company Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Company Email'"
                                       required class="single-input">*@
                            </div>
                            <div class="col-lg-4" style="margin-top:10px">
                                <input type="submit" class="genric-btn primary-border" value="Submit" />
                                <input type="button" id="btnCancel" class="genric-btn primary-border" value="Cancel" />
                            </div>
                            <div class="col-lg-4">

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="col-lg-12">
            <button value="Add New" id="btnAddNew" class="btn btn-danger">Add New</button>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <table id="tblJobPost" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Fisrt Name</th>
                            <th>Last Name</th>
                            <th>Mobile</th>
                            <th>Status</th>                           
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.AdminUsers != null)
                        {
                            foreach (var user in Model.AdminUsers)
                            {
                                <tr>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.MobileNo</td>
                                    <td>@user.Status</td>
                                  
                                    <td>
                                        <a title="Edit" href="@Url.Action("EditAdminUser","AdminUsers",new { id = user.Id})"><i class="ti-pencil"></i></a>
                                        <a title="Delete" href="@Url.Action("DeleteAdminUser","AdminUsers",new { id = user.Id})" class="delete-row" onclick="return confirm('Are sure wants to delete?');"><i class="ti-close"></i></a>
                                    </td>
                                </tr>
                            }

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</section>

