
@{
    ViewData["Title"] = "RegisterBusiness";
    Layout = "~/Views/Shared/_LayoutMemberDashboard.cshtml";
}

<section class="blog_area single-post-area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="single-post">
                    <div class="blog_details">
                        <p class="excert">
                            Post the Business Details
                        </p>
                    </div>
                </div>


                <div class="section-top-border">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <form action="#">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <input type="text" name="Businesstitle" placeholder="Business Title" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Business Title'"
                                               required class="single-input">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <input type="text" name="firmIndustry" placeholder="Name of the firm / Industry" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Name of the firm / Industry'"
                                               required class="single-input">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4">
                                        <input type="text" name="Companylocation" placeholder="Company location" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Company location'"
                                               required class="single-input">
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="text" name="Address" placeholder="Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Address'"
                                               required class="single-input">
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="text" name="Ownername" placeholder="Owner name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Owner name'"
                                               required class="single-input">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4">
                                        <input type="text" name="ProductsorServices" placeholder="Products or Services" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Products or Services'"
                                               required class="single-input">
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="text" name="QualificationRequired" placeholder="Qualification Required" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Qualification Required'"
                                               required class="single-input">
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="text" name="ContactNo." placeholder="Company Contact No." onfocus="this.placeholder = ''" onblur="this.placeholder = 'Company Contact No.'"
                                               required class="single-input">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4">
                                        <input type="Email" name="CompanyEmail" placeholder="Company Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Company Email'"
                                               required class="single-input">
                                    </div>
                                    <div class="col-lg-4" style="margin-top:10px">
                                        <a href="#" class="genric-btn primary-border">Submit</a>
                                    </div>
                                    <div class="col-lg-4">

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
