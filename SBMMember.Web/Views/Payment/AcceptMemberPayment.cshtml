@model MemberPaymentViewModel
@{
    ViewData["Title"] = "AccpetMemberPayment";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="blog_area single-post-area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="single-post">
                    <div class="blog_details">
                        <p class="excert">Member Registration fess</p>
                        <div class="login-icon">
                            <img src="~/img/login-icon.png" width="110px" height="110px">
                        </div>
                    </div>
                </div>
                <div class="login-type">
                    <div class="form-group">
                        <div class="container">
                            <div class="row">
                                <h3>Samata Bharatru Mandal Lifetime Member Registration Fess.</h3>
                            </div>
                            <form asp-action="MemberPayment" asp-controller="Payment" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="MemberId" />
                                <div class="row">

                                    <div class="col-lg-4 col-md-4 mt-sm-50">
                                        <input type="text" name="MemberName" asp-for="MemberName" placeholder="Enter Member Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Member Name'"
                                               required class="single-input-primary" readonly>
                                    </div>
                                    <div class="col-lg-4 col-md-4 mt-sm-50">
                                        <input type="text" name="Mobile" asp-for="Mobile" placeholder="Mobile" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mobile'"
                                               required class="single-input-primary" readonly>
                                    </div>
                                    <div class="col-lg-4 col-md-4 mt-sm-50">
                                        <input type="text" name="Email" asp-for="Email" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'"
                                               required class="single-input-primary" readonly>
                                    </div>
                                    <div class="col-lg-4 col-md-4 mt-sm-50">
                                        Rs.@Model.Amount.ToString("0.00")
                                        <input type="hidden" name="Amount" asp-for="Amount" value="@Model.Amount" placeholder="Amount" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Amount'"
                                               required class="single-input-primary">
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-lg-7 col-md-6 mt-sm-50">
                                        <button class="btn btn_12" type="submit" text="Submit">Pay Now</button>
                                    </div>

                                    <div class="col-lg-5 col-md-6 mt-sm-50">

                                    </div>



                                   
                                </div>
                            </form>
                        </div>

                    </div>

                    <div class="navigation-top">

                    </div>




                </div>

            </div>
        </div>
    </div>
</section>

