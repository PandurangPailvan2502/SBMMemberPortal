@model SubscriptionViewModel
@{
    ViewData["Title"] = "EditMembersubscription";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<section class="blog_area single-post-area section_padding">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="scroll">
                    <p>Update Member Portal Subscription charges</p>
                </div>
                <div>
                </div>
            </div>
        </div>



        <div class="section-top-border">
            <div class="row" id="BusinessForm">
                <div class="col-lg-12 col-md-12">
                    <form asp-action="EditMembersubscription" asp-controller="subscriptions" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <input type="hidden" asp-for="Id" />
                                <input type="text" name="Charges" asp-for="Charges" placeholder="subscription charges" onfocus="this.placeholder = ''" onblur="this.placeholder = 'subscription charges'"
                                       required class="single-input">
                            </div>
                        </div>



                        <div class="row">
                            <div class="col-lg-4">
                               
                            </div>
                            <div class="col-lg-4" style="margin-top:10px">
                                <input type="submit" class="genric-btn primary-border" value="Submit" />
                                <a asp-action="MemberPortalSubscriptionCharges" asp-controller="Subscriptions" id="btnCancel" class="genric-btn primary-border">Cancel</a>
                            </div>
                            <div class="col-lg-4">

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    

</section>
