@using SBMMember.Web.Models.MemberSearchModels
@model MemberSearchByQualificationViewModel
@{
    ViewData["Title"] = "MemberSearchByQualification";
    Layout = "~/Views/Shared/_LayoutMemberDashboard.cshtml";
}

<div class="container-fluid" style="margin-top:30px">
    <div class="row">
        <div class="col-lg-12">
            <div class="scroll" style="background-color:darkred">
                <p> Welcome to Member's Database</p>
            </div>
        </div>
    </div>
</div><!--------------dashboard-------------->

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="search-box">
                <form asp-action="MemberSearchByQualification" asp-controller="MemberDashboard" method="post" enctype="multipart/form-data">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-12">
                                <h6 style="text-align:center">Search Member by Qualification</h6>
                                <div class="container">
                                    <div class="row ">
                                        <div class="col-sm-3">
                                            <input text="text" name="Qualification" asp-for="Qualification" class="single-input" placeholder="Qualification (e.g. MBA/BE/ITI)" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Qualification (e.g. MBA/BE/ITI)'">
                                        <div class="orcondit"><h6>OR</h6></div>
                                        </div>
                                        <div class="col-sm-3">
                                            <input text="text" name="Proffession" asp-for="Proffession" class="single-input" placeholder="Business / Job / Farmer / Student
" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Business / Job / Farmer / Student
'">
                                        </div>
                                        <div class="col-sm-3">

                                        </div>
                                        <div class="col-sm-3">

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <table class="btntbl">
                                                <tr>
                                                    <td width="50%"><a asp-action="MemberSearchByQualification" asp-controller="MemberDashboard" name="search" class="allresetbtn">Reset</a></td>
                                                    <td width="50%"><input type="submit" value="Search" id="btnreset" class="allsubmitbtn" ></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!------------End of icon dashbaord row-1--------------->
                            </div>
                        </div>
                    </div>
                    
                </form>

            </div>
        </div>
    </div>
</div>


<!------------Search Result--------------->

@if (Model.MemberList != null)
{
    <!------------Search Result--------------->
    @foreach (MemberSearchResponseViewModel model in Model.MemberList)
    {
        @await Html.PartialAsync("_PartialMemberInfo", model)
    }
}

