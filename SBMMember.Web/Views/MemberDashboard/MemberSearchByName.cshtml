@using SBMMember.Web.Models.MemberSearchModels
@model MemberSearchByNameViewModel
@{
    ViewData["Title"] = "MemberSearchByName";
    Layout = "~/Views/Shared/_LayoutMemberDashboard.cshtml";
}

<!--------------dashboard-------------->
<div class="container-fluid" style="margin-top:30px">
    <div class="row">
        <div class="col-lg-12">
            <div class="scroll" style="background-color:darkred">
                <p> Welcome to Member's Database</p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="search-box">
                <form asp-action="MemberSearchByName" asp-controller="MemberDashboard" method="post" enctype="multipart/form-data">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-12">
                                <h6 style="text-align:center">Search Member by Name</h6>
                                <div class="container">
                                    <div class="row ">
                                        <div class="col-sm-3">
                                            <input text="text" name="FirstName" asp-for="FirstName" class="search-box_input" placeholder="FirstName" onfocus="this.placeholder = ''" onblur="this.placeholder = 'FirstName'">
                                        </div>
                                        <div class="col-sm-3">
                                            <input text="text" name="MiddleName" asp-for="MiddleName" class="search-box_input" placeholder="MiddleName" onfocus="this.placeholder = ''" onblur="this.placeholder = 'MiddleName'">
                                        </div>
                                        <div class="col-sm-3">
                                            <input text="text" name="LastName" asp-for="LastName" class="search-box_input" placeholder="LastName" onfocus="this.placeholder = ''" onblur="this.placeholder = 'LastName'">
                                        </div>
                                        <div class="col-sm-3">
                                            <input text="text" name="MemberId" asp-for="MemberId" class="search-box_input" placeholder="MemberID" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Member ID'">
                                        </div>
                                    </div>
                                </div>
                                <!------------End of icon dashbaord row-1--------------->
                            </div>
                        </div>
                        <div class="row">
                                        <div class="col-lg-12">
                                            <table class="btntbl">
                                                <tr>
                                                    <td width="50%"><input type="reset" name="search" class="allresetbtn"></td>
                                                    <td width="50%"><input type="submit" value="Reset" id="btnreset" class="allsubmitbtn" ></td>
                                                </tr>
                                            </table>

                                        </div>
                                    </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.MemberList != null)
{
    <!------------Search Result--------------->
    @foreach (MemberSearchResponseViewModel model in Model.MemberList)
    {
        @await Html.PartialAsync("_PartialMemberInfo", model)
    }
}



