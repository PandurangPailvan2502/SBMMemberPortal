@using SBMMember.Web.Models.MemberSearchModels
@model MemberSearchByAreaViewModel
@{
    ViewData["Title"] = "MemberSearchByArea";
    Layout = "~/Views/Shared/_LayoutMemberDashboard.cshtml";
}

<!--------------dashboard-------------->
<div class="container-fluid" style="margin-top:30px">
    <div class="row">
        <div class="col-lg-12">
            <div class="scroll" style="background-color:darkred">
                <p> Welcome to Member's Database</p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-action="MemberSearchByArea" asp-controller="MemberDashboard" method="post" enctype="multipart/form-data">
                <div class="search-box">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-12">
                                <h6 style="text-align:center">Search Member by Area</h6>
                                <div class="container">
                                    <div class="row ">

                                        <div class="col-sm-3">
                                            <input text="text" name="Area" asp-for="Area" class="single-input" placeholder="Area" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Area'">
                                        <div class="orcondit"><h6>OR</h6></div>
                                        </div>
                                        <div class="col-sm-3">
                                            <input text="text" name="City" asp-for="City" class="single-input" placeholder="City" onfocus="this.placeholder = ''" onblur="this.placeholder = 'City'">
                                        <div class="orcondit"><h6>OR</h6></div>
                                        </div>
                                        <div class="col-sm-3">
                                            <input text="text" name="Pincode" asp-for="Pincode" class="single-input" placeholder="Pincode" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Pincode'">
                                        <div class="orcondit"><h6>OR</h6></div>
                                        </div>
                                        <div class="col-sm-3">
                                            <input text="text" name="District" asp-for="District" class="single-input" placeholder="District" onfocus="this.placeholder = ''" onblur="this.placeholder = 'District'">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <table class="btntbl">
                                                <tr>
                                                    <td width="50%"><input type="submit" name="search" class="allsubmitbtn"></td>
                                                    <td width="50%"><input type="reset" value="Reset" id="btnreset" class="allresetbtn" ></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!------------End of icon dashbaord row-1--------------->
                            </div>
                        </div>
                    </div>
                   </div>
            </form>
        </div>
    </div>
</div>
<div class="seperate"></div>

<!------------Search Result--------------->

<div class="seperate"></div>
@if (Model.MemberList != null)
{
<!------------Search Result--------------->
    @foreach (MemberSearchResponseViewModel model in Model.MemberList)
    {
        @await Html.PartialAsync("_PartialMemberInfo", model)
    }
}


