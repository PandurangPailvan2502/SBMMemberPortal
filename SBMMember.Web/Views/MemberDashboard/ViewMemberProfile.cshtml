@model MemberFormCommonViewModel

@{
    ViewData["Title"] = "ViewMemberProfile";
    Layout = "~/Views/Shared/_LayoutMemberDashboard.cshtml";
}


<div class="container">
    <div class="row">
        <div class="edit4btn">
            <p class="padding:20px;margin:10px; color:#ffffff; background-color:#000000">View Profile</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table>
                <tr>
                    <td style="background-color:#7c0053">
                        <div class="photo-container1">
                            @if (Model.MemberPersonalInfo.MemberProfileImage != null)
                            {
                                <img src="~/MemberProfileImages/@Model.MemberPersonalInfo.MemberProfileImage.Split('/')[2]" class="view_prof_i">
                            }
                            else
                            {
                                <img src="~/img/Noavatar.png" class="view_prof_i">
                            }
                        </div>
                    </td>
                    <td width="100%" style="background-color:#7c0053">
                        <section class="data-content1">
                            <table>
                                <tr>
                                    <td><label class="lbl_profile"><strong>सभासदाचे नाव:</strong> @Model.MemberPersonalInfo.PrefixM @Model.MemberPersonalInfo.FirstNameM @Model.MemberPersonalInfo.MiddleNameM @Model.MemberPersonalInfo.LastNameM</label></td>
                                </tr>
                                <tr>
                                    <td><label class="lbl_profile">सभासद क्रमांक: @Model.MemberPaymentInfo.MemberShipIdM </label></td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="lbl_profile">
                                            जन्म तारीख: @if (Model.MemberPersonalInfo.BirthDate != DateTime.MinValue)
                                            {@Model.MemberPersonalInfo.BirthDate.ToString("dd-MM-yyyy")}
                                        </label>
                                    </td>
                                </tr>
                                <tr><td><label class="lbl_profile">मोबाईल: @Model.MemberConatctInfo.Mobile1 </label></td></tr>
                            </table>
                        </section>
                    </td>
                </tr>
            </table>
            <div class="Scriptcontent">

                <section class="tabs-container">
                    <label for="tab1" class="yel"><img src="~/img/profile.png" class="matri-icon"><br /> वैयक्तिक माहिती </label>
                    <label for="tab2" class="yel"><img src="~/img/contact-details-m.png" class="matri-icon"><br /> मुळगाव व संपर्क</label>
                    <label for="tab3" class="yel"><img src="~/img/mortarboard.png" class="matri-icon"><br> शिक्षण / नोकरी </label>
                    <label for="tab4" class="yel"><img src="~/img/people.png" class="matri-icon"><br> कुटुंबाविषयी माहिती </label>
                    <label for="tab5" class="yel"><img src="~/img/contact-img.png" class="matri-icon"><br> सभासदत्व माहिती</label>

                </section>

                <input name="tab" id="tab1" type="radio" checked />

                <section class="tab-content" style="">

                    <div class="section-top-border">
                        <div class="row">
                            <div class="col-lg-10 col-md-10" style="margin-left:10px;">
                                <form asp-action="MemberPersonalInfo" asp-controller="MemberDashboard" method="post" enctype="multipart/form-data">
                                    <input type="hidden" asp-for="MemberPersonalInfo.MemberId" />
                                    <div class="input-group-icon mt-10">
                                        <div class="icon"><i class="fa fa-plane" aria-hidden="true"></i></div>
                                        <div class="form-select" id="default-select">

                                            <label style="font-weight:bold; font-size:18px">@Model.MemberPersonalInfo.PrefixM @Model.MemberPersonalInfo.FirstNameM @Model.MemberPersonalInfo.MiddleNameM @Model.MemberPersonalInfo.LastNameM</label><br />
                                        </div>
                                    </div>


                                    @*<div class="input-group-icon mt-10">
                                            <div class="icon"><i class="fa fa-plane" aria-hidden="true"></i></div>
                                            <div class="form-select" id="default-select">

                                                <label><b>स्री / पुरुष : </b>@Model.MemberPersonalInfo.GenderM</label>
                                            </div>
                                        </div>*@
                                    <div class="input-group-icon mt-10">
                                       
                                      

                                            <label><b>वैवाहिक स्थिती : </b><br /> @Model.MemberPersonalInfo.MaritalStatusM</label><br /><br />
                                            
                                            <label><b>जन्म तारीख : </b><br /> @if (Model.MemberPersonalInfo.BirthDate != DateTime.MinValue)
                                            {@Model.MemberPersonalInfo.BirthDate.ToShortDateString()}
                                            </label><br /><br />
                                    
                                            <label><b>रक्त गट : </b><br /> @Model.MemberPersonalInfo.BloodGroup</label><br /><br />
                                            <label><b>संपूर्ण पत्ता : </b><br />@Model.MemberPersonalInfo.AddressM</label><br /><br />
                                            <label><b>एरिया :</b><br /> @Model.MemberPersonalInfo.AreaM</label><br /><br />
                                            <span><b>शहर : </b><br />@Model.MemberPersonalInfo.CityM</span><br /><br />
                                            <span><b>पिन कोड : </b><br />@Model.MemberPersonalInfo.PincodeM</span><br /><br />
                                            <span><b>तालुका : </b><br />@Model.MemberPersonalInfo.TalukaM</span><br /><br />
                                            <span><b>जिल्हा : </b><br />@Model.MemberPersonalInfo.DistrictM</span><br /><br />
                                            <span><b>राज्य :</b> <br />@Model.MemberPersonalInfo.StateM</span><br /><br />
                                    </div>
                               </form>
                            </div>

                        </div>
                    </div>

                </section>


                <input name="tab" id="tab2" type="radio" />
                <section class="tab-content">

                    <div class="section-top-border">
                        <div class="row">
                            <div class="col-lg-10 col-md-10" style="margin-left:10px">
                                <form asp-controller="MemberDashboard" asp-action="MemberContactInfo" method="post" enctype="multipart/form-data">
                                    <input type="hidden" asp-for="MemberConatctInfo.MemberId" />
                                    <div class="input-group-icon mt-3">
                                        <span><b>सभासदाचे मुळगाव : </b> <br />@Model.MemberConatctInfo.NativePlaceM</span><br /><br />
                                        <span><b>मुळगाव तालुका :</b><br />@Model.MemberConatctInfo.NativePlaceTalukaM</span><br /><br />
                                        <span><b>मुळगाव जिल्हा :</b><br /> @Model.MemberConatctInfo.NativePlaceDistM</span><br /><br />
                                        <span><b>संपर्क १ : </b><br />@Model.MemberConatctInfo.Mobile1M</span><br /><br />
                                        <span><b>संपर्क २ : </b><br />@Model.MemberConatctInfo.Mobile2M</span><br /><br />
                                        <span><b>ई-मेल : </b><br />@Model.MemberConatctInfo.EmailId</span><br /><br />
                                        <span><b>जवळच्या नातेवाईकाचे संपूर्ण नाव : </b><br />@Model.MemberConatctInfo.RelativeNameM</span><br /><br />
                                        <span><b>जवळच्या नातेवाईकाचा संपूर्ण पत्ता : </b><br />@Model.MemberConatctInfo.RelativeAddressM</span><br /><br />
                                        <span><b>जवळच्या नातेवाईकाचा संपर्क नं  १: </b><br />@Model.MemberConatctInfo.RelativeContact1M</span><br /><br />
                                        <span><b>जवळच्या नातेवाईकाचा संपर्क नं  २: </b><br />@Model.MemberConatctInfo.RelativeContact2M</span><br /><br />
                                    </div>
</form>
                            </div>

                        </div>
                    </div>
                </section>

                <input name="tab" id="tab3" type="radio" />
                <section class="tab-content">

                    <div class="section-top-border">
                        <div class="row">
                            <div class="col-lg-10 col-md-10" style="margin-left:10px">
                                <form asp-action="MemberEduEmpInfo" asp-controller="MemberDashboard" method="post" enctype="multipart/form-data">
                                    <input type="hidden" asp-for="MemberEducationEmploymentInfo.MemberId" />
                                    <div class="input-group-icon mt-10">
                                        <span><b>सभासदाचे शिक्षण : </b><br />@Model.MemberEducationEmploymentInfo.QualificationM</span><br /><br />
                                        <span><b>व्यवसाय/नोकरी शेतकरी/विद्यार्थी : </b><br />@Model.MemberEducationEmploymentInfo.ProffessionM</span><br /><br />
                                        <span><b>कंपनीचे नाव :</b><br />@Model.MemberEducationEmploymentInfo.CompanyNameM</span><br /><br />
                                        <span><b>कंपनीचा पत्ता  :</b><br />@Model.MemberEducationEmploymentInfo.CompanyAddressM</span><br /><br />
                                        <span><b>व्यवसायाचे नाव :</b><br />@Model.MemberEducationEmploymentInfo.BusinessNameM</span><br /><br />
                                        <span><b>व्यवसायाचा पत्ता  :</b><br />@Model.MemberEducationEmploymentInfo.BusinessAddressM</span><br /><br />
                                    </div>
                                    </form>
                            </div>

                        </div>
                    </div>
                </section>

                <input name="tab" id="tab4" type="radio" />
                <section class="tab-content">

                    <div class="section-top-border">

                        <div class="row">
                            <div class="col-lg-10 col-md-10">
                                <form asp-action="AddToList" asp-controller="Member" method="post" enctype="multipart/form-data">
                                    <input type="hidden" asp-for="MemberFamilyInfo.MemberFamilyDetails" />
                                    <input type="hidden" asp-for="MemberFamilyInfo.MemberId" />

                                    @if (ViewBag.MemberList != null)
                                    {
                                        <div class="mt-10 center">
                                            <table class="table table-striped" id="tblFamily">
                                                <thead>
                                                    <tr>
                                                        <td><b>कुटुंबातील व्यक्तीचे नाव</b></td>
                                                        <td><b>नाते</b></td>

                                                        @* <td>कुटुंबातील व्यक्तीचे काम </td>
                                                            <td>रक्त गट</td>*@
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (var familyMember in ViewBag.MemberList)
                                                    {
                                                        <tr>
                                                            <td>@familyMember.NameM</td>
                                                            <td>@familyMember.RelationM</td>
                                                            <td><button type="button" id="@familyMember.FamilyDetailsID" class="btn btn-sm btn-info" data-toggle="modal" data-target="#@("Family"+@familyMember.FamilyDetailsID)">View Details</button></td>
                                                            @*<td>@familyMember.OccupationM</td>
                                                                <td>@familyMember.BloodGroup</td>*@
                                                        </tr>

                                                    }

                                                </tbody>
                                            </table>

                                        </div>
                                    }

                                </form>

                                <div id="myModal" class="modal">

                                    <!-- Modal content -->
                                    <div class="modal-content">
                                        <span class="close">&times;</span>
                                        <p>Some text in the Modal..</p>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>
                </section>

                <input name="tab" id="tab5" type="radio" />
                <section class="tab-content">

                    <div class="section-top-border">
                        <div class="row">
                            <div class="col-lg-10 col-md-10">
                                <form action="#">

                                    <div class="input-group-icon mt-10">
                                        <span><b>सभासदत्व रक्कम : </b>@Model.MemberPaymentInfo.ChagesPaid</span>

                                    </div>
                                    <div class="input-group-icon mt-10">
                                        <span><b>माध्यम (कॅश / ऑनलाईन / चेक) : </b>@Model.MemberPaymentInfo.PaymentMode</span>

                                    </div>

                                    <div class="input-group-icon mt-10">
                                        <span><b>पैसे भरल्याचे नं : </b>@Model.MemberPaymentInfo.TransactionNo</span>

                                    </div>

                                    <div class="input-group-icon mt-10">
                                        <span><b>पैसे भरलेल्याची तारीख :</b>@Model.MemberPaymentInfo.TransactionDate </span>

                                    </div>

                                    <div class="input-group-icon mt-10">
                                        <span><b>पावती क्र : </b>@Model.MemberPaymentInfo.RecieptNo</span>

                                    </div>
                                    <div class="input-group-icon mt-10">
                                        <span><b>सभासद क्रमांक : </b>@Model.MemberPaymentInfo.MemberShipIdM</span>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </section>
            </div>


        </div>
    </div>
</div>




@if (ViewBag.MemberList != null)
{

    @foreach (var familyMember in ViewBag.MemberList)
    {
        <div class="modal fade" id="@("Family"+@familyMember.FamilyDetailsID)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="false">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">कुटुंब सदस्य माहिती</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group-icon mt-10">
                            <span><b>नाव : </b><span id="mem_name">@familyMember.NameM</span></span>

                        </div>
                        <div class="input-group-icon mt-10">
                            <span><b>नाते : </b><span id="mem_relation">@familyMember.RelationM</span></span>

                        </div>

                        <div class="input-group-icon mt-10">
                            <span><b>जन्म तारीख :  </b><span id="mem_dob">@familyMember.DOB.ToString("dd-MM-yyyy")</span></span>

                        </div>
                        <div class="input-group-icon mt-10">
                            <span><b>रक्त गट :  </b><span id="mem_bloodgroup">@familyMember.BloodGroup</span></span>

                        </div>
                        <div class="input-group-icon mt-10">
                            <span><b> शिक्षण :  </b><span id="mem_education">@familyMember.EducationM</span></span>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

}